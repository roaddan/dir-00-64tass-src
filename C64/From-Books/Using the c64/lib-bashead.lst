               ;---------------------------------------               ;Filename.: firstbas.asm               ;Autor....: Daniel Lafrance               ;Version..: 20241013               ;---------------------------------------               start    *= $08010801 0b 08     bcmd1    .word $080b ;Address of next                                    ; Basic command.0803 0a 00              .word $0a   ;Basic line number.                                    ; 10 in this case.0805 9e                 .byte $9e   ;Basic token for                                    ; SYS command.0806 32 30 36 31                        .text "2061";Address of the                                    ; assembler program                                    ; in decimal/ascii.080a 00                 .byte $00   ;Basic end of cmd.080b 00 00     bcmd2    .word $00   ;Address of next                                    ; Basic command.                                    ; $00 if no more.               ;---------------------------------------               ;To ease the creation of the program the               ; first action is to jump to the mai               ; routine. In this manner the header               ; will remain the same for all programs.               ;The main routine must end by a RTS to               ; exit to Basic correctly.               ;---------------------------------------080d 20 14 08           jsr initscr0810 00                 jsr main0811 60                 rts               ;---------------------------------------               initscr                        .block0812 08                 php0813 48                 pha0814 a9 05     bord     lda #$05    ;Set coulor of0816 8d 20 d0           sta $d020   ; the border.0819 a9 06     back     lda #$06    ;Set coulor of081b 8d 21 d0           sta $d021   ; background.081e a9 01     text     lda #$01    ;Set coulor of0820 8d 86 02           sta $0286   ; text.0823 a9 93              lda #$93    ;Clear the screen0825 20 d2 ff           jsr $ffd2   ; with Kernal                                    ; chrout routine.0828 68                 pla0829 28                 plp082a 60                 rts                        .bend               ;---------------------------------------